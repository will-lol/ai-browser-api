{
  "name": "ai-browser-api",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @llm-bridge/extension dev",
    "build": "bun run --filter @llm-bridge/extension build",
    "zip": "bun run --filter @llm-bridge/extension zip",
    "build:client": "bun run --filter @llm-bridge/client build",
    "typecheck": "bun run --filter @llm-bridge/client typecheck",
    "lint": "bun run --filter @llm-bridge/extension lint && bun run --filter @llm-bridge/client typecheck"
  }
}
